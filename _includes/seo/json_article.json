{
  "@context": "http://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type": "website",
    "name" : "{{ site.title }}",
    "alternateName" : "{{ site.legal_name}}",
    "url" : "{{ site.baseurl | prepend: site.url }}"
  },
  "publisher": {
    "@type":"Organization",
    "logo":"{{ site.logo | prepend: site.baseurl | prepend: site.url }}",
    "name":"{{ site.title }}",
    "legalName":"{{ site.legal_name }}",
    "description":"{{ site.mission }}",
    "foundingDate":"1935",
    "areaServed":"Colorado",
    "url":"{{ page.url | prepend: site.baseurl | prepend: site.url }}",
    "sameAs":[
      "{{ site.baseurl | prepend: site.url }}",{% for media in site.social %}
      "{{ media.url}}"{% unless forloop.last %},{% endunless %}{% endfor %}
    ],
    "subOrganization":[  
      "COABE",
      "MPAEA"
    ]
  },
  "author": {
    "@type": "Person",
    "name": "{{ page.author }}",
    "image": {
      "@type": "ImageObject",
      "url": "{{ site.logo | prepend: site.baseurl | prepend: site.url }}",
      "width": 256,
      "height": 256
    },
    "url": "{{ site.baseurl | prepend: site.url }}",
    "sameAs": "{{ site.baseurl | prepend: site.url }}",
    "description": "{{ site.description }}"
  },
  "headline": "{{ page.title | replace: '_',' ' | strip_html }}",
  "url": "{{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url }}",
  "datePublished": "{{ page.date | date_to_xmlschema }}",
  "dateModified": "{{ page.date | date_to_xmlschema }}",
  "image": {
    "@type": "ImageObject",
    "url": "{{ site.logo | prepend: site.baseurl | prepend: site.url }}",
    "width": 256,
    "height": 256
  },
  "keywords": "{{ page.categories }}",
  "description": "{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.mission }}{% endif %}"
}